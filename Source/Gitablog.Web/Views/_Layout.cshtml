@using Page = Gitablog.Web.ViewModels.Page
<!DOCTYPE html>

@{
    var pages = (IEnumerable<Page>)@ViewBag.Pages;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Merriweather:400italic,400,300,700' rel='stylesheet' type='text/css'>
    <link href='/Content/main.css' rel='stylesheet' type='text/css'>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="logo">
                <img src="~/Content/Images/Logo.png" alt="logo">    
            </div>
            <div class="menu">
                @foreach (var page in pages)
                {
                    @Html.ActionLink(page.Name, "Page", "Home", new { pageName = page.Name }, new { @class = "menu-item" })
                }
            </div>
        </div>
        <div class="body">
            @RenderBody()    
        </div>
    </div>
</body>
</html>
